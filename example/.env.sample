# Magento API Configuration
# Copy this file to .env and update with your values

# Default Magento API URL (recommended for testing)
MAGENTO_API_URL=https://luma-demo.scandipwa.com/

# Alternative demo URLs for testing
MAGENTO_API_URL_ALT_1=https://demo.magento.com
MAGENTO_API_URL_ALT_2=https://magento2-demo.nexcess.net
MAGENTO_API_URL_ALT_3=https://demo-m2.bird.eu

# API Configuration
MAGENTO_API_TIMEOUT=30
MAGENTO_API_RETRY_COUNT=3

# Development settings
DEBUG_MODE=true
LOG_LEVEL=debug

# Authentication (if needed)
# MAGENTO_API_TOKEN=your_api_token_here
# MAGENTO_CONSUMER_KEY=your_consumer_key_here
# MAGENTO_CONSUMER_SECRET=your_consumer_secret_here
